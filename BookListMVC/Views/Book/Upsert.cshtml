@model BookListMVC.Models.CreateModel
@{
    ViewData["Title"] = "Create book";
}

<div class="position-relative">
    <h1 class="text-muted d-inline-block">Create book</h1>
    <a asp-action="Index" asp-controller="Book" class="btn btn-danger float-right vertical-centre">Cancel</a>
</div>

<hr />

<form method="post" class="subtle-shadow p-3 rounded">
    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
    <div class="form-row">
        <div class="form-group col-12">
            <label asp-for="Book.Name"></label>
            <input class="form-control " asp-for="Book.Name" required />
            <span asp-validation-for="Book.Name" class="text-danger"></span>
        </div>
        <div class="form-group col-12">
            <label asp-for="Book.Author"></label>
            <input class="form-control" asp-for="Book.Author" />
        </div>
        <div class="form-group col-12">
            <label asp-for="Book.ISBN"></label>
            <input class="form-control" asp-for="Book.ISBN" />
        </div>
    </div>

    <input type="hidden" asp-for="Book.Id">
    <button class="btn btn-primary" type="submit">Submit</button>
</form>

<partial name="_ValidationScriptsPartial" />

<script>
    $('form').validate({
        onkeyup: false,
        rules: {
            "Book.Name": {
                required: {
                    depends: function () {
                        $(this).val($.trim($(this).val()));
                        return true;
                    }
                }
            }
        }
    });
</script>

